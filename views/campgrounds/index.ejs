<% include ../partials/header %>




<!-- <div class="container"> -->
    <header class="jumbotron">
            <div class="container">
                <h1>Bienvenidos a Solo Para Viajeros</h1>
                <p> Fotos seleccionadas de algunos viajes por el mundo</p>
                <br>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Agregar nuevo lugar visitado!</a>
            </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Sitios populares</h3>
        </div>
    </div>
<br>
<br> 
    <div class="row text-center"  style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(camps){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                       <img id="img-sz" src="<%= camps.image %>">
                          <div class="caption">
                            <h4><%= camps.name %></h4>
                          </div>
                          <p>
                            <a href="/campgrounds/<%= camps._id%>" class="btn btn-primary">Mas Info</a>                          </p>
                    </div>  
                </div>               
        <% });  %>
    </div>           


<% include ../partials/footer %>